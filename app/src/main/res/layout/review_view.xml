<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reviewer_name"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/play_button_margin"
        android:textSize="@dimen/reviewer_name_font_size"
        />

    <TextView
        android:id="@+id/review_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/reviewer_name"
        android:layout_centerHorizontal="true"
        android:maxLines="5"
        android:layout_marginLeft="@dimen/review_margin"
        android:layout_marginRight="@dimen/review_margin"
        android:layout_marginBottom="@dimen/review_margin"
        android:ellipsize="end"
        android:textColor="@android:color/primary_text_light"
        android:textSize="@dimen/review_font_size"/>

</RelativeLayout>
